<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TotoMorti.Pages.AvailableCelebrityListPage">
    <StackLayout VerticalOptions="Fill">
        <ListView x:Name="List" ItemsSource="{Binding AvailableCelebrities}" CachingStrategy="RecycleElement"
                  RowHeight="60"
                  HasUnevenRows="false" ItemTapped="List_OnItemTapped" AbsoluteLayout.LayoutFlags="All"
                  AbsoluteLayout.LayoutBounds="0,0,1,1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Image Source="{Binding ImageUrl}" />
                            <StackLayout HorizontalOptions="StartAndExpand">
                                <Label Text="{Binding FullName}" />
                                <Label Text="{Binding Age}" TextColor="Gray" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>